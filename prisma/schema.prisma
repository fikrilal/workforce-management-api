generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String?
  fullName     String?
  phone        String?
  lastLoginAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // relations
  attendance   AttendanceSession[]
  leaves       LeaveRequest[]
  payslips     Payslip[]
  refreshTokens RefreshToken[]
  taskPlans    TaskPlan[]
}

// --- attendance ---

enum CheckinMethod {
  WEB
  MOBILE
  KIOSK
}

model AttendanceSession {
  id             String        @id @default(uuid())
  userId         String
  user           User          @relation(fields: [userId], references: [id])
  workDate       DateTime
  clockInAt      DateTime
  clockOutAt     DateTime?
  minutesWorked  Int?
  note           String?
  method         CheckinMethod @default(WEB)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([userId, workDate])
}

// --- leave ---

enum LeaveType {
  ANNUAL
  SICK
  UNPAID
  OTHER
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

model LeaveRequest {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  type        LeaveType
  startDate   DateTime
  endDate     DateTime
  totalDays   Int
  reason      String?
  status      LeaveStatus @default(PENDING)
  decidedAt   DateTime?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId, startDate])
}

// --- payslip ---

model Payslip {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  year      Int
  month     Int // 1..12
  currency  String   @default("USD")
  gross     Decimal  @db.Decimal(12, 2)
  net       Decimal  @db.Decimal(12, 2)
  items     Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, year, month])
  @@index([userId])
}

// --- auth refresh tokens ---

model RefreshToken {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  tokenHash     String
  expiresAt     DateTime
  revokedAt     DateTime?
  replacedById  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([expiresAt])
}

// --- tasks ---

enum TaskStatus {
  PLANNED
  IN_PROGRESS
  DONE
}

model TaskPlan {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  workDate  DateTime
  summary   String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  tasks     TaskEntry[]

  @@unique([userId, workDate])
  @@index([userId, workDate])
}

model TaskEntry {
  id          String               @id @default(uuid())
  taskPlanId  String
  taskPlan    TaskPlan             @relation(fields: [taskPlanId], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      TaskStatus           @default(PLANNED)
  order       Int                  @default(0)
  completedAt DateTime?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  attachments TaskAttachmentLink[]

  @@index([taskPlanId])
}

model TaskAttachmentLink {
  id          String    @id @default(uuid())
  taskEntryId String
  taskEntry   TaskEntry @relation(fields: [taskEntryId], references: [id], onDelete: Cascade)
  label       String?
  url         String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([taskEntryId])
}
